# Environment Variables Configuration
# Copy this file to .env for development
# For production, set these values in your deployment environment

# ==============================================
# Application Configuration
# ==============================================
VITE_APP_NAME=ArchitectUI
VITE_APP_VERSION=4.2.0
VITE_APP_DESCRIPTION=React Admin Dashboard
VITE_APP_AUTHOR=DashboardPack.com
VITE_APP_TITLE=ArchitectUI - ReactJS Bootstrap 5 Admin UI Dashboard Template
VITE_APP_HOMEPAGE=./

# ==============================================
# Server Configuration
# ==============================================
VITE_PORT=3001
VITE_HOST=localhost
VITE_PROTOCOL=http

# ==============================================
# API Configuration
# ==============================================
VITE_API_BASE_URL=https://api.example.com
VITE_API_TIMEOUT=30000
VITE_API_VERSION=v1

# ==============================================
# Theme Configuration
# ==============================================
VITE_THEME_COLOR_SCHEME=white
VITE_THEME_BG_OPACITY=opacity-06
VITE_THEME_ENABLE_BG_IMAGE=false
VITE_THEME_FIXED_HEADER=true
VITE_THEME_HEADER_SHADOW=true
VITE_THEME_SIDEBAR_SHADOW=true
VITE_THEME_FIXED_SIDEBAR=true
VITE_THEME_FIXED_FOOTER=true
VITE_THEME_PAGE_TITLE_ICON=true
VITE_THEME_PAGE_TITLE_SUBHEADING=true
VITE_THEME_PAGE_TABS_ALT=true

# ==============================================
# Feature Flags
# ==============================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_DEBUG_MODE=false
VITE_ENABLE_SERVICE_WORKER=false

# ==============================================
# Redux Configuration
# ==============================================
VITE_REDUX_PERSIST_KEY=root
VITE_REDUX_STORAGE_VERSION=1
VITE_ENABLE_REDUX_DEVTOOLS=true

# ==============================================
# Authentication Configuration
# ==============================================
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=refresh_token
VITE_AUTH_TOKEN_EXPIRY=3600
VITE_AUTH_AUTO_REFRESH=true

# ==============================================
# Cache Configuration
# ==============================================
VITE_CACHE_MAX_AGE=300000
VITE_ENABLE_CACHE=true

# ==============================================
# Logging Configuration
# ==============================================
VITE_LOG_LEVEL=info
VITE_LOG_CONSOLE=true
VITE_LOG_REMOTE=false
VITE_LOG_REMOTE_URL=

# ==============================================
# Build Configuration
# ==============================================
VITE_BUILD_TIME=
VITE_GIT_COMMIT=
VITE_GIT_BRANCH=

# ==============================================
# Performance Configuration
# ==============================================
VITE_ENABLE_LAZY_LOADING=true
VITE_CHUNK_SIZE_LIMIT=500

# ==============================================
# Data Configuration
# ==============================================
# Paths to external data files (relative to src/)
VITE_DATA_PROFILES=data/profile-data.json
VITE_DATA_DASHBOARD=data/dashboard-data.json
VITE_DATA_TABLES=data/table-data.json
VITE_DATA_FORMS=data/form-data.json
VITE_DATA_MENUS=data/menu-data.json
VITE_DATA_UI_CONSTANTS=data/ui-constants.json

# ==============================================
# Asset Configuration
# ==============================================
VITE_ASSET_BASE_PATH=/src/assets/utils/images
VITE_AVATAR_PATH=avatars
VITE_BACKGROUND_PATH=dropdown-header

# ==============================================
# External Services (Optional)
# ==============================================
